{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "paths": {
    "@/*": ["./src/*"],
    "@repo/ui/*": ["../../packages/ui/src/*"],
    "@repo/tailwind-config/*": ["../../packages/tailwind-config/*"]
  },
  "exclude": ["node_modules"]
}
